<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormRegisterUserActivity"
    android:gravity="center">

    <EditText
        android:id="@+id/txtnombreR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingrese su nombre"
        android:layout_marginBottom="10dp"
         />

    <EditText
        android:id="@+id/txtpaternoR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingrese tu apellido paterno"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/txtrazonsocialR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Ingrese su apellido materno"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtdniR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Ingrese DNI o pasaporte"/>


    <EditText
        android:id="@+id/txtcelularRC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:hint="Ingrese su celular"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/tvfechanacimientoR"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtcorreoR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Ingresa tu correo electronico"/>

    <EditText
        android:id="@+id/txtpassR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Ingrese su contraseña"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/txtpassdosR"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:hint="Confirmar contraseña"/>

    <CheckBox
        android:id="@+id/cbterminosR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Acept_Ter_Con" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/Form_btn_Register"
        />

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/Form_btn_Noregister"/>

</LinearLayout>